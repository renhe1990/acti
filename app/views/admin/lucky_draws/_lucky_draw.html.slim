tr id="#{dom_id(lucky_draw)}"
  td width=14
    span.glyphicon.glyphicon-move
  td= lucky_draw.title
  td
    .btn-group.pull-right
      = link_to '详情', [:admin, @course, lucky_draw], class: 'btn btn-info'
      = link_to '编辑', [:edit, :admin, @course, lucky_draw], class: 'btn btn-primary'
      = link_to '删除', [:admin, @course, lucky_draw], method: :delete, class: 'btn btn-danger', data: { confirm: '你确定要删除这个问卷吗?' }
