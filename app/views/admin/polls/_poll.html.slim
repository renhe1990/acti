tr id="#{dom_id(poll)}"
  td width=14
    span.glyphicon.glyphicon-move
  td= poll.name
  td
    .btn-group.pull-right
      = link_to '详情', [:admin, @course, poll], class: 'btn btn-info'
      = link_to '编辑', [:edit, :admin, @course, poll], class: 'btn btn-primary'
      = link_to '删除', [:admin, @course, poll], method: :delete, class: 'btn btn-danger', data: { confirm: '你确定要删除这个问卷吗?' }
